@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

        
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Hesap Bilgileri</h3>
                           @using (Html.BeginForm("Edit", "Admin"))
                           {
                               @Html.HiddenFor(x => x.AdminId)
                               @Html.HiddenFor(x => x.Status)
                                <div class="form-group">
                                    <label>Kullanıcı Adı:</label>
                                    <input type="text" value="@Model.Username" name="Username" class="form-control p_input">
                                </div>
                               
                                <div class="form-group">
                                    <label>Şifrenizi Giriniz:</label>
                                    <input id="editPassword" type="password" name="Password" class="form-control p_input">
                                    <br />
                                    <label>Şifrenizi Tekra Giriniz:</label>
                                    <input id="editPassword" type="password" name="Password" class="form-control p_input">
                                    <a id="showPassword" style="color:#ffff; font-size:10px;float:right; margin-top:5px;margin-bottom:5px" href="# ">Şifreyi Göster</a>

                                </div>
                                <div></div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Güncelle</button>
                                </div>

                           }

                        </div>
                 </div>
     

                 <script>
                   const edit=  document.querySelectorAll("#editPassword")
                     document.querySelector("#showPassword").addEventListener('click', function () {
                         for (var i = 0; i < edit.length; i++) {
                             if (edit[i].type != "text") {
                                 edit[i].type = "text";
                             }
                             else
                                 edit[i].type = "password";
                         }
                     })
                 </script>