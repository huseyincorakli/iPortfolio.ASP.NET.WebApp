@model EntityLayer.Concrete.Testimonial
@{
    ViewBag.Title = "EditTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card col-lg-6 mx-auto">
    <div class="card-body px-5 py-5">
        <h3 class="card-title text-left mb-3">Fotoğraf Bilgileri</h3>

        <div class="card col-lg-12 mx-auto" style=" margin-bottom:10px">
            <img class="img-rounded img-responsive " src="@Model.TestimoImageUrl" />
        </div>


        <form class="forms-sample" method="post" action="@Url.Action("EditTestimonial","Testimonial")">
            <div class="form-group">
                @Html.HiddenFor(x => x.TestimoId)
                <label>Ad Soyad:</label>
                @Html.TextBoxFor(x => x.TestimoNameSurname, new { @class = "form-control p_input" })
                @Html.ValidationMessageFor(x => x.TestimoNameSurname, null, new { @class = "text-danger", @style = "font-size:12px" })
            </div>
            <div class="form-group">
                <label>Fotoğraf Url:</label>
                @Html.TextBoxFor(x => x.TestimoImageUrl, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TestimoImageUrl, null, new { @class = "text-danger", @style = "font-size:12px" })
            </div>
            <div class="form-group">
                <label>Ünvan:</label>
                @Html.TextBoxFor(x => x.TestimoTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TestimoTitle, null, new { @class = "text-danger", @style = "font-size:12px" })
            </div>
            <div class="form-group">
                <label>Yorum:</label>
                @Html.TextBoxFor(x => x.TestimoComment, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TestimoComment, null, new { @class = "text-danger", @style = "font-size:12px" })
            </div>


            <button type="submit" style="float:right" class="btn btn-primary mr-2">GÜNCELLE</button>
        </form>

    </div>
</div>

